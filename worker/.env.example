# Cloudflare Worker Environment Variables
# Note: These are set in wrangler.toml, but you can use .env for local development

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Allowed CORS origins (comma-separated)
# Update after deploying frontends to Vercel
ALLOWED_ORIGINS=https://yourdomain.com,https://yourdomain.vercel.app

# Environment
ENVIRONMENT=production

# For production deployment, set these in wrangler.toml:
# [vars]
# TELEGRAM_BOT_TOKEN = "your_token"
# ALLOWED_ORIGINS = "https://voicesticker-telegram.vercel.app,https://voicesticker-whatsapp.vercel.app"
